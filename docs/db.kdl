schema {
    table "todo" label="Todos" file="todo.csv" {
        field "status" type="select" label="Status" {
            option "todo" label="🔘 Todo"
            option "doing" label="🔵 Doing"
            option "done" label="✅ Done"
            option "nope" label="❎ Cancelled"
        }
        field "type" type="select" {
            option "content" label="🎁 Content"
            option "feat" label="❇️ Feature"
            option "imp" label="✨ Improvement"
            option "bug" label="🔧 Bugfix"
            option "balance" label="⚖️ Balance"
            option "devtool" label="🧰 DevTool"
            option "refactor" label="⚙️ Refactoring"
            option "perf" label="📊 Performance"
        }
        field "milestone_id" label="Milestone" type="belongs_to" related_entity="milestone" related_key="id"
        field "title"
    }

    table "milestone" label="Milestones" file="milestone.csv" {
        field "id"
        field "title"
        field "time_budget"
        field "logged_time"
    }

    table "time_entries" label="Time Entries" file="time-entries.csv" {
        field "date"
        field "milestone" type="belongs_to" related_entity="milestone" related_key="id"
        field "hours"
        field "notes"
    }

    table "credits" label="Asset credits" file="credits.csv" {
        field "status" type="select" {
            option "ok" label="✅ OK"
            option "placeholder" label="🟡 Placeholder"
            option "nolicense" label="‼️ Not licensed"
        }
        field "type" type="select" {
            option "font" label="🀄️ Font"
            option "sfx" label="🔊 Sound effect"
            option "music" label="🎵 Music"
        }
        field "file"
        field "name"
        field "credit"
        field "url"
        field "notes"
    }
}
